<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>login / register</title>
    <link rel="stylesheet" href="CSS/stylesheet.css">

    <script src="/socket.io/socket.io.js"></script>

        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>


</head>

<body>

<div class="container-fluid text-center">
    <div class="row topper">
        <div class="col-md-1">
            <a href="mainMenuPage.ejs">Main Menu</a>
        </div>

        <div class="col-md-10">
            <h2 style="padding: 20px">Login and Registration</h2>
        </div>

        <div class="col-md-1">
            <h6 style="padding: 20px"></h6>
        </div>
    </div>

    <br>

    <div class="row">
        <div class="col-md-6">

            <form action="loginPage.ejs" method="post">
                <h4>Login:</h4>
                <input type="hidden" name="requestedAction" value="login">
                <div class="form-group">
                    <label for="username">Username:</label>
                    <input type="text" class="form-control centre" id="username" name="username" value="" style="width: 50%;">
                </div>
                <div class="form-group">
                    <label for="password">Password:</label>
                    <input type="password" class="form-control centre" id="password" name="password" value="" style="width: 50%;">
                </div>
                <input type="submit" value="Login" class="btn btn-outline-success">
            </form>
        </div>

        <div class="col-md-6">
            <form action="loginPage.ejs" method="post">
                <h4>Register:</h4>
                <input type="hidden" name="requestedAction" value="register">
                <div class="form-group">
                    <label for="username">Username:</label>
                    <input type="text" class="form-control centre" id="username" name="username" value="" style="width: 50%;">
                </div>
                <div class="form-group">
                    <label for="password">Password:</label>
                    <input type="password" class="form-control centre" id="password" name="password" value="" style="width: 50%;">
                </div>
                <input type="submit" value="Register" class="btn btn-outline-success">
            </form>

        </div>
    </div>

    <br>

    <div class="row">
        <div class="col-md-6">
            <form action="loginPage.ejs" method="post">
                <h4>Welcome, <%= username%></h4>
                <h6>Edit your details here</h6>
                <input type="hidden" name="requestedAction" value="editUsername">

                <div class="form-group">
                    <label for="newUsername">Username</label>
                    <input type="text" class="form-control centre" id="newUsername" name="newUsername" value="<%= username%>" style="width: 50%;">
                </div>
                <input type="submit" value="Edit Username" class="btn btn-outline-success">
            </form>

            <form action="loginPage.ejs" method="post">
                <input type="hidden" name="requestedAction" value="editPassword">

                <div class="form-group">
                    <label for="currentPassword">Current Password</label>
                    <input type="password" class="form-control centre" id="currentPassword" name="currentPassword" value="" style="width: 50%;">
                </div>

                <div class="form-group">
                    <label for="newPassword">New Password</label>
                    <input type="password" class="form-control centre" id="newPassword" name="newPassword" value="" style="width: 50%;">
                </div>

                <input type="submit" value="Edit Password" class="btn btn-outline-success">
            </form>

            <br>

            <form action="loginPage.ejs" method="post">
                <input type="hidden" name="requestedAction" value="deleteAccount">

                <input type="submit" value="DELETE ACCOUNT" class="btn btn-outline-danger">
            </form>
        </div>

        <div class="col-md-6">

        </div>
    </div>
</div>
</body>
</html>